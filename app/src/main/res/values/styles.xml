<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="progressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">#D32F2F</item>
    </style>
    <style name="EditTextLogin" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:textColor">@color/blackLogin</item>
        <item name="android:textColorHint">@color/blackLogin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>

    </style>
    <style name="EditTextSignUp" parent="Widget.AppCompat.EditText">
    <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">@dimen/dim_m</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingEnd">11dp</item>
    <item name="android:background">@drawable/edittextborder</item>
    <item name="android:textColorHint">@color/blacksignup</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


</resources>
